<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="120dp"
    android:layout_height="280dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardBackgroundColor="@color/colorAccent"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="3dp">

        <ImageView
            android:id="@+id/shoes_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/shoes1"
            android:scaleType="centerCrop" />

        <!--<TextView-->
        <!--android:id="@+id/shoes_id"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50sp"-->
        <!--android:text="Shoes Id"-->
        <!--android:gravity="center"-->
        <!--android:textStyle="bold"-->
        <!--android:textColor="#2d2d2d"-->
        <!--android:textSize="15sp"-->
        <!--android:padding="3dp"/>-->



        <TextView
            android:id="@+id/shoes_name"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:text="Shoes Name"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#2d2d2d"
            android:textSize="15sp"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/shoes_tipe"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:text="Shoes Tipe"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#2d2d2d"
            android:textSize="15sp"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/shoes_ukuran"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:text="Shoes Ukuran"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#2d2d2d"
            android:textSize="15sp"
            android:padding="3dp"/>
        <TextView
            android:id="@+id/shoes_harga"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:text="Shoes Harga"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#2d2d2d"
            android:textSize="15sp"
            android:padding="3dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>